<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd">

	<!-- 导入子文件 -->
	<import resource="spring-ctx.xml" />

	<context:component-scan
		base-package="com.accp.pqw.action" />
	<mvc:annotation-driven />
	<mvc:default-servlet-handler />
	<!-- 视图资源文件视图解析器 -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.JstlView" />
		<property name="prefix" value="/WEB-INF/view/" />
		<property name="suffix" value=".jsp" />
	</bean>
	<!-- 文件上传解析器 【id:multipartResolver 必须存在】 -->
	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<!-- 1024*1024*40=41943040b 上传文件总大小(足够大，以便回避tomcat的bug) -->
		<property name="maxUploadSize" value="41943040" />
		<!-- resolveLazily属性启用是为了推迟文件解析，以便在Action中捕获文件大小异常 -->
		<property name="resolveLazily" value="true" />
		<property name="defaultEncoding" value="UTF-8" />
	</bean>
	<!-- 页面控制器 -->
	<mvc:view-controller path="/login"
		view-name="login" />
	<mvc:view-controller path="/homePage"
		view-name="homePage" />
	<mvc:view-controller path="/welcome"
		view-name="welcome" />
	<mvc:view-controller path="/addLeave"
		view-name="leave/toAddPage" />
	<mvc:view-controller path="/addPage"
		view-name="page/toAdd" />
	<!-- 全局异常处理视图解析器 -->
	<!-- <bean class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver"> 
		<property name="exceptionMappings"> <props> <prop key="com.accp.t2.exception.BizException">bizerror</prop> 
		<prop key="java.lang.Exception">syserror</prop> </props> </property> </bean> -->
	<mvc:interceptors>
		<!--自定义拦截器(拦截所有请求) -->
		<!-- <bean class="com.accp.pqw.handler.LoginCheck"></bean> -->
		<!--自定义拦截器(拦截指定请求) -->
		<mvc:interceptor>
			<mvc:mapping path="/**" /><!-- 必须以mvc:mapping开头 -->
			<mvc:exclude-mapping path="/c/Employee/login" />
			<mvc:exclude-mapping path="/c/Employee/loginOut" />
			<mvc:exclude-mapping path="/login" />
			<mvc:exclude-mapping path="/js/**" />
			<mvc:exclude-mapping path="/css/**" />
			<mvc:exclude-mapping path="/images/**" />
			<bean class="com.accp.pqw.handler.LoginCheck" />
		</mvc:interceptor>
	</mvc:interceptors>
</beans>
